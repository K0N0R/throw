
.dialog {
	position: fixed;
	left: calc(50% - 150px);
	top: calc(50% - 150px);
	background-color: #a4b992;
	width: 300px;
	height: 300px;
	padding: 30px;
	display: flex;
	flex-direction: column;
	justify-content: center;
	border-radius: 5px;
}

.form-field {
	display:flex;
	flex-direction: column;
	margin: 10px;

}
.form-field label {
	padding: 5px 10px;
	text-transform: uppercase;
	color: hsla(92, 22%, 15%, 1);
	font-weight: 500;
}

.form-field input {
	padding: 5px 10px;
	border-radius: 5px;
	border: none;
	outline: none;
	font-size: 20px;
}

.form-field-avatar {
	display:flex;
	flex-direction: column;
	margin: 10px;
}

.form-field-avatar label {
	padding: 5px 3px;
	text-transform: uppercase;
	color: hsla(92, 22%, 15%, 1);
	font-weight: 500;
}

.form-field-avatar input {
	padding: 5px;
	border-radius: 5px;
	border: none;
	outline: none;
	width: 50px;
	height: 50px;
	font-size: 30px;
	text-align: center;
}

.link {
	padding: 15px;
	text-align: center;
}

.form-btn {
	margin: 10px;
	background-color: white;
	line-height: 40px;
	border-radius: 5px;
	border: none;
	text-transform: uppercase;
	outline: none;
}

.form-btn-submit {
	background-color: #718c5a;
	color: white;
	font-weight: 800;
}

.display--flex {
	display: flex;
}