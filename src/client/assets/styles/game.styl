@keyframes textPulse {
	0% {
		color #eef2f0
	}
	50% {
		color red
	}
	100% {
		color #eef2f0
	}
}

canvas
	max-height 100%
	max-width 100%
	margin auto
	border-style solid
	border-radius 10px
	color #eef2f0

.game-state
	position fixed
	top 0
	left calc(50% - 250px)
	width 500px
	height 40px
	display flex
	align-items center
	background-color var(--background-color)
	box-shadow 0px 10px 43px 0px rgba(0, 0, 0, 0.12)
	border-bottom-left-radius 5px
	border-bottom-right-radius 5px
	color white
	align-items center
	font-size 18px
	padding 0 10px

	&__winning-team
		position fixed
		top calc(50% - 150px)
		left 0
		width 100vw
		text-align center
		height 60px
		line-height 60px
		font-size 55px
		font-weight 900
		text-shadow 4px 4px 0px black
		white-space nowrap

	&__scorer
		position fixed
		top 40px
		left 0
		width 100vw
		text-align center
		font-size 35px
		font-weight 900
		height 40px
		line-height 40px
		text-shadow 2px 2px 0px black
		white-space nowrap

		&--left
			color #e56e56

		&--right
			color #5689e5

	&__scorer-user
		position fixed
		top 80px
		left 0
		width 100vw
		text-align center
		font-size 25px
		font-weight 900
		height 40px
		line-height 40px
		text-shadow 2px 2px 0px black
		white-space nowrap

	&__fps
		flex 1
		display flex
		align-items center
		font-size 21px
		

		&__value
			margin-right auto

	&__score
		display flex
		align-items center
		padding 0 10px
		justify-content center

		&__value
			display flex
			align-items center
			font-size 21px

	&__time
		flex 1
		justify-content center
		text-align right
		display flex
		align-items center

		&__value
			font-weight 900
			font-size 21px
			text-align right
			margin-left auto

			&--ending
				animation-name textPulse
				animation-iteration-count infinite
				animation-duration 0.7s

	&__golden
		color gold
		font-size 21px

.team-cube
	width 20px
	height 20px
	border-radius 5px

.team-cube--left
	background-color #e56e56
	margin-right 8px

.team-cube--right
	background-color #5689e5
	margin-left 8px

.scoreboard-wrap
	position fixed
	z-index 10
	top calc(50% - 200px)
	left calc(50% - 250px)
	width 500px
	height 400px
	margin auto

	.scoreboard
		display flex
		position relative
		flex-direction column
		margin auto
		background-color hsla(186, 21%, 26%, 0.3)
		box-shadow 0px 10px 43px 0px rgba(0, 0, 0, 0.12)

		&::before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			filter blur(10px)

		&__header
			display flex
			padding 10px
			background-color rgba(0, 0, 0, 0.3)

		&__item
			display flex
			align-items center
			padding 10px

			&:nth-child(even)
				background-color rgba(0, 0, 0, 0.1)

			&--self
				font-weight 900

		&__column
			flex 1
			text-shadow 2px 2px 0px black

			&--centered
				text-align center