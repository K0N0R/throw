

canvas {
	height  100%
	margin auto
	border-style solid
	border-radius 10px
	box-shadow 0 0 10px -7px black
	color #eef2f0
}

.game-state
	position fixed
	top 0
	left calc(50% - 250px)
	width 500px
	height 40px
	display flex
	align-items center
	background-color black
	border-bottom-left-radius 5px
	border-bottom-right-radius 5px
	color white
	align-items center

	&__scorer
		position absolute
		top 40px
		width 100%
		text-align center
		font-size 35px
		font-weight 900
		height 40px
		line-height 40px
		text-shadow 3px 3px 0px black

		&__player
			text-shadow 2px 2px 0px black
			font-size 30px

		&--left
			color #e56e56

		&--right
			color #5689e5
		
		&--punchline
			text-shadow 3px 3px 0px black
			color white

	&__scorer-user
		position absolute
		top 80px
		width 100%
		text-align center
		font-size 35px
		font-weight 900
		height 40px
		line-height 40px
		text-shadow 3px 3px 0px black

	&__score
		display flex
		align-items center
		flex 1
		justify-content center

		&__value
			display flex

	&__time
		flex 1
		justify-content center
		text-align center

	&__golden
		flex 1
		font-size 16px
		justify-content center
		text-align center
		color gold

.team-cube {
	width 20px
	height 20px
	border-radius 5px
}

.team-cube--left {
	background-color #e56e56
	margin-right 8px
}

.team-cube--right {
	background-color #5689e5
	margin-left 8px
}


