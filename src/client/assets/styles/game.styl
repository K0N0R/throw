

canvas {
	height  100%
	margin auto
	border-style solid
	border-radius 10px
	box-shadow 0 0 10px -10px inset
	color #eef2f0
}

.game-state 
	position fixed
	top 0
	left calc(50% - 250px)
	width 500px
	height 40px
	display flex
	align-items center
	background-color black
	border-bottom-left-radius 5px
	border-bottom-right-radius 5px
	color white
	align-items center
	font-size 20px
	font-weight bold
	font-family 'Consolas', 'Courier New', monospace

	&__score
		display flex
		align-items center
		flex 1
		justify-content center

		&__value
			display flex

	&__time
		flex 1
		justify-content center
		text-align center

	&__golden
		flex 1
		font-size 16px
		justify-content center
		text-align center
		color gold

.team-cube {
	width 20px
	height 20px
	border-radius 5px
}

.team-cube--left {
	background-color #e56e56
	margin-right 8px
}

.team-cube--right {
	background-color #5689e5
	margin-left 8px
}


