@import './reset'
@import './game'
@import './login'
@import './list'
@import './room'

:root
	--text-color hsl(97, 13%, 80%)
	--text-invert-color hsl(201, 20%, 14%)
	--primary-color hsl(133, 18%, 59%)
	--primary-light-color hsl(133, 18%, 70%)
	--secundary-color hsl(165, 19%, 40%)
	--secundary-color-light hsl(165, 19%, 60%)
	--background-color hsl(186, 21%, 26%)
	--surface-color hsl(201, 20%, 23%)

*,
*::before,
*::after
	box-sizing border-box

html,
body
	width 100%
	height 100%
	overflow hidden

html
	font-size 62.5%

body
	display flex
	flex-direction column
	font-size 1.6rem
	font-family 'Consolas', 'Courier New', monospace
	background-color var(--secundary-color)
	background-image repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.0666) 35px, rgba(255,255,255,.0666) 70px)