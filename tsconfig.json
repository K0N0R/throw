{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["dom", "es2018"],
      "declaration": false,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noResolve": false,
      "skipLibCheck": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
  },
  "paths": {
      "~*": ["./*"]
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "package.json", "dist"]
}
